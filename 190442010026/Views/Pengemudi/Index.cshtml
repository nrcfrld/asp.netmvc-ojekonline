
@{
    ViewBag.Title = "Pengemudi";
    Layout = "~/Views/Shared/Template.cshtml";

    int no = 1;
}

<!-- Modal -->
<div class="modal fade" id="addDataDiriModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    @using (Html.BeginForm("Create", "Pengemudi", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Tambah Pengemudi</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Nama Pengemudi :</label>
                        @Html.TextBox("nama_pengemudi", "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Plat Nomor :</label>
                        @Html.TextBox("plat_nomor", "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Nomor SIM :</label>
                        @Html.TextBox("nomor_sim", "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Gaji Perjam :</label>
                        @Html.TextBox("gaji_perjam", "", new { @class = "form-control", type = "number" })
                    </div>

                    <div class="form-group">
                        <label>Insentif Makan :</label>
                        @Html.TextBox("insentif_makan", "", new { @class = "form-control", type = "number" })
                    </div>

                    <div class="form-group">
                        <label>Insentif Bensin :</label>
                        @Html.TextBox("insentif_bensin", "", new { @class = "form-control", type = "number" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" onclick="return confirm('Benar akan disimpan data ini ?')">Simpan</button>
                </div>
            </div>
        </div>
    }
</div>
<!-- End Modal -->
<!-- Dashboard Counts Section-->
<section class="dashboard-counts no-padding-bottom mb-5">
    <div class="container-fluid">
        <div class="row bg-white has-shadow">
            <div class="col">
                <div class="table-responsive">
                    <table class="table" id="table-datadiri" width="100%">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nama</th>
                                <th scope="col">Plat Nomor</th>
                                <th scope="col">Nomor SIM</th>
                                <th scope="col">Gaji Perjam</th>
                                <th scope="col">Insentif Makan</th>
                                <th scope="col">Insentif Bensin</th>
                                <th scope="col" class="noExport">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dd in (dynamic)ViewData["data_diri"])
                            {
                                <tr>
                                    <td>@no</td>
                                    <td>@Html.Encode(dd.nama_pengemudi)</td>
                                    <td>@Html.Encode(dd.plat_nomor)</td>
                                    <td>@Html.Encode(dd.nomor_sim)</td>
                                    <td>@Html.Encode(dd.gaji_perjam)</td>
                                    <td>@Html.Encode(dd.insentif_makan)</td>
                                    <td>@Html.Encode(dd.insentif_bensin)</td>
                                    <td class="text-center text-nowrap">
                                        @Html.ActionLink("Edit", "Edit", "Pengemudi", new { id = dd.id }, new{ @class = "btn btn-primary" })
                                        @Html.ActionLink("Delete", "Delete", "Pengemudi", new { id = dd.id }, new { @class = "btn btn-danger", onclick="return confirm('Apakah anda yakin menghapus data ini ?')" })
                                    </td>
                                </tr>
                                no++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

